@model IEnumerable<WebDeveloper.Model.Product>
@using  WebDeveloper.Helper


@{
    ViewBag.Title = "Ejemplos de Razor y Helpers";
}
@helper DisplayPriceRazor(double price) {
    if (price == 0)
    {
        <span>Free!!</span>
    }
    else
    {
        <span>@price</span>
    }
}

@helper DisplayDateOrNull(DateTime? Ndate) { 
    if (Ndate==null)
    {
        <span>@DateTime.Now</span>
}
else
{
        <span>@Ndate</span>
}
}


<h2>@ViewBag.Title</h2>
<ul>
    @foreach(var product in Model)
    {
        <li>
            <span>@product.Description :</span>
            
            @*Este codigo se reemplaza por el Helper
                @if (product.Precio == 0)
            {
                <span>Free!!</span>
            }
            else
            {
                <span>@product.Precio</span>
            }*@
            @DisplayPriceRazor(product.Precio)
            
            <div>
                @CustomHelper.PrDisplayPriceStatic(product.Precio)
            </div>
            <div>
                @Html.DisplayPriceExtension(product.Precio)
            </div>
            <div>
                Fecha Normal: @DisplayDateOrNull(product.Fecha)
                <div>
                    Fecha Estatica: @CustomHelper.DisplayDateOrNullStatic(product.Fecha)
                </div>
                <div>La otra Fecha: @Html.DisplayDateOrNullExtension(product.Fecha) </div>
            </div>
        </li>
    }
</ul>

